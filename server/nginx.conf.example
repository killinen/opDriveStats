# /etc/nginx/sites-available/engagement-gauge

upstream engagement_gauge_api {
    server 127.0.0.1:8000;
    keepalive 32;
}

server {
    listen 80;
    listen [::]:80;
    server_name your-subdomain.duckdns.org;

    # Redirect HTTP to HTTPS once a certificate is obtained.
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name your-subdomain.duckdns.org;

    # Certbot will insert the certificate paths below after running
    # sudo certbot --nginx -d your-subdomain.duckdns.org
    ssl_certificate /etc/letsencrypt/live/your-subdomain.duckdns.org/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/your-subdomain.duckdns.org/privkey.pem;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;

    # Security headers (optional tweaks welcome)
    add_header X-Content-Type-Options nosniff;
    add_header X-Frame-Options DENY;
    add_header Referrer-Policy no-referrer-when-downgrade;
    add_header Strict-Transport-Security "max-age=63072000; includeSubDomains" always;

    access_log /var/log/nginx/engagement_gauge_access.log;
    error_log /var/log/nginx/engagement_gauge_error.log;

    location / {
        proxy_pass http://engagement_gauge_api;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Connection "";
        proxy_read_timeout 120s;
    }

    location /docs {
        proxy_pass http://engagement_gauge_api/docs;
    }

    location /openapi.json {
        proxy_pass http://engagement_gauge_api/openapi.json;
    }
}
